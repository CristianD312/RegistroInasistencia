    <Label layoutX="173.0" layoutY="30.0" text="Ingrese el nombre de usuario">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <TextField fx:id="TxtCampoUsuario" layoutX="154.0" layoutY="66.0" onAction="#OnBuscarUsuarioClick" prefHeight="39.0"
               prefWidth="271.0" promptText="ingrese el nombre de usuario">
        <font>
            <Font size="13.0"/>
        </font>
    </TextField>
    <Button fx:id="BtnBuscar" layoutX="258.0" layoutY="119.0" mnemonicParsing="false" onAction="#OnBuscarUsuarioClick"
            text="buscar"/>

</AnchorPane>
